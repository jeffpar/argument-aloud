{
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true
    },
    "[json,jsonc]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true
    },
    "[markdown]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "files.trimTrailingWhitespace": false,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true
    },
    "cSpell.words": [
        "endunless",
        "orderedlist"
    ]
}